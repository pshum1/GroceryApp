    <ImageView
        android:layout_width="28dp"
        android:layout_height="wrap_content"
        android:id="@+id/cart_icon"
        android:src="@drawable/ic_baseline_shopping_cart_24"/>

    <TextView
        android:id="@+id/text_view_cart_count"
